{
  "name": "knowledge-graph",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/knowledge-graph/knowledge-graph.git"
  },

  "devDependencies": {
    "jshint": "",
    "browserify": "",
    "watchify": "~0.6",
    "beefy": "",
    "karma": "~0.10"
  },

  "dependencies": {
    "d3": "~3.3.8",
    "dagre-d3": "git://github.com/knowledge-graph/dagre-d3.git#master"
  },

  "scripts": {
    "git-setup": "cp -r tools/hooks/* .git/hooks",
	"build": "node tools/build.js",
    "watch": "watchify src/knowledge-graph.js -d -o dist/knowledge-graph.js",
    "start": "npm run watch & beefy --live src/knowledge-graph.js",
    "test": "jshint src/knowledge-graph.js & karma start tests/karma.conf.js --single-run",
    "test-watch": "npm run watch & karma start tests/karma.conf.js --auto-watch"
  },

  "jshintConfig": {
    "globals": {
      "require": false,
      "global": false,
      "module": false
    }
  }
}
